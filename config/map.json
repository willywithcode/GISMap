{
  "map": {
    "default_center": {
      "longitude": 105.8542,
      "latitude": 21.0285
    },
    "default_zoom": 13,
    "min_zoom": 10,
    "max_zoom": 18,
    "tile_size": 256,
    "pan_bounds": {
      "min_longitude": 105.0,
      "max_longitude": 107.0,
      "min_latitude": 20.5,
      "max_latitude": 21.5
    }
  },
  "tile_servers": {
    "openstreetmap": {
      "name": "OpenStreetMap",
      "url": "https://tile.openstreetmap.org/{z}/{x}/{y}.png"
    },
    "satellite": {
      "name": "Satellite",
      "url": "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"
    }
  },
  "cache": {
    "enabled": true,
    "cache_directory": "resources/tiles",
    "max_size_mb": 200,
    "cleanup_interval_hours": 24
  }
}
